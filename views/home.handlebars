<main>
    <h1>{{title}}</h1>
    <i><h2 style="text-align: center; color: #4285F4; text-shadow: 1px 1px 2px #ddd">Welcome {{name}}</h2></i>
    <h3>Search Patients</h3>
    <form id="patientSearchForm">
      <label for="birthdate">Birthdate</label>
      <input type="date" id="birthdate" name="birthdate">
      <input type="submit">
    </form>
		<h2>Results</h2>
		<ul id="results"></ul>
		<h2>My Patients</h2>
		<li>
			{{#each myPatients}}
				<a href="/patient/{{this._id}}">{{this.lastName}}, {{this.firstName}}</a>
			{{/each}}
		</li>
		
		<h2>Shared Patients</h2>
    <script
      src="https://code.jquery.com/jquery-3.5.1.js"
      integrity="sha256-QWo7LDvxbWT2tbbQ97B53yJnYU3WhH/C8ycbRAkjPDc="
      crossorigin="anonymous"
    ></script>
    <script src="/public/clientJS.js"></script>
</main>